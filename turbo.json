{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**"
            ]
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "inputs": [
                "src/**/*.ts",
                "test/**/*.ts"
            ]
        },
        "lint": {},
        "format": {},
        "deploy": {
            "dependsOn": [
                "build"
            ]
        }
    }
}