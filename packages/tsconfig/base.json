{
    "compilerOptions": {
        "sourceRoot": "./",
        "outDir": "./tsc",
        "rootDir": "./src",
        "pretty": true,
        "lib": ["dom", "ES2020"],
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "noEmitOnError": true,
        "emitDeclarationOnly": true,
        "strict": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowUnusedLabels": false,
        "skipLibCheck": false,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "newLine": "lf",
        "types": []
    }
}