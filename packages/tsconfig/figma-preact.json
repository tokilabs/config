{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./base.json",

	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"typeRoots": ["./node_modules/@types", "./node_modules/@figma"]
	},

	"paths": {
		"@code": ["./src/code/index"],
		"@code/*": ["./src/code/*"],
		"@ui": ["./src/ui/index"],
		"@ui/*": ["./src/ui/*"],
		"@test/*": ["./tests/*"],
		"!../css/base.css": ["../css/base.css"]
	},

	"exclude": ["node_modules"]
}
