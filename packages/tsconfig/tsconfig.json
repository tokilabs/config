{
    "compileOnSave": false,
    "compilerOptions": {
      // Require by Figma
      "jsx": "react-jsx",
      "jsxImportSource": "preact",
      // "jsxFragmentFactory": "figma.widget.Fragment",
      "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
      // end of Require by Figma
      "esModuleInterop": true,
      "isolatedModules": true,
      "lib": ["dom", "ES2020"],
      "module": "ES2020",
      "moduleResolution": "Node",
      "strict": true,
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "target": "ES2020",
      "rootDir": "./src",
      "sourceMap": true,
      "sourceRoot": "./",
      "outDir": "./tsc",
    },
    "extends": "@tsconfig/node12/tsconfig.json",
    "include": ["src/**/*"],
    "exclude": ["node_modules", "tmp", "notes", "tests", "*.config.ts"]
  }
  