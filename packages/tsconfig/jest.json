{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./base.json",

	"compilerOptions": {
		"outDir": "./test-dist",
		"module": "commonjs",
		"types": ["jest", "node"]
	},

	"include": [
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/*.test.tsx",
		"**/*.spec.tsx",
		"**/*.test.js",
		"**/*.spec.js",
		"**/*.test.jsx",
		"**/*.spec.jsx",
		"**/*.d.ts"
	]
}
